<tr class="text-center border-t border-gray-700">
    <th class="table__row">{{ loop.index }}</th>
    <td class="table__row">{{ vehicle.brand }} {{ vehicle.model }}</td>
    <td class="table__row">{{ vehicle.numberPlate }}</td>
    <td class="table__row">{{ vehicle.year }}</td>
    <td class="table__row">{{ vehicle.datePurchase }}</td>
    <td class="table__row flex gap-3 justify-center">
        {% if currentDate > vehicle.service %}
        <span class="inline alertRed"><i class="fa-solid fa-triangle-exclamation"></i></span>
        {% elseif currentDate.diff(vehicle.service).days <= 7 and currentDate.diff(vehicle.service).days >= 0 %}
        <span class="inline alertYellow"><i class="fa-solid fa-triangle-exclamation"></i></span>
        {% endif %}
        {{ vehicle.service|date('d-m-Y') }}
    </td>
    <td class="table__row">
        {% if currentDate > vehicle.insurance %}
        <span class="inline alertRed"><i class="fa-solid fa-triangle-exclamation"></i></span>
        {% elseif currentDate.diff(vehicle.insurance).days <= 7 and currentDate.diff(vehicle.insurance).days >= 0 %}
        <span class="inline alertYellow"><i class="fa-solid fa-triangle-exclamation"></i></span>
        {% endif %}
        {{ vehicle.insurance|date('d-m-Y') }}
    </td>
    <td class="flex gap-3 justify-center">
        <div class="action-btn action-btn--edit">
            <a href="{{ path('app_vehicle_edit', {vehicle: vehicle.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
        </div>
        <div class="action-btn action-btn--remove">
            <a href="{{ path('app_vehicle_remove', {vehicle: vehicle.id}) }}" onclick="return confirm('Operacja usuniÄ™cia jest nieodwracalna')"><i class="fa-solid fa-trash"></i></a>
        </div>
    </td>
</tr>