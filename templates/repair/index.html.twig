{% extends 'base.html.twig' %}

{# {% block title %}Hello HomeController!{% endblock %} #}

{% block body %}
<div class="grid grid-cols-8 w-full h-full w:md-2/3 mx-auto ">
        {{ include('shared/_form_nav.html.twig') }}
        
    <div class="col-span-6 grid grid-rows-7 w-full">
        <div class="row-span-4 col-span-6">
        <table class="w-full">
            <tr class="grid grid-cols-7">
                <th>Nr</th>
                <th>Pojazd</th>
                <th>Serwisowana część</th>
                <th>Koszt</th>
                <th>Data</th>
                <th>Opis</th>
                <th>Akcja</th>
            </tr>
            {% if repairs|length > 0 %}
                {% for repair in repairs %}
                    {{ include('repair/_repair.html.twig', { 'repair': repair }) }}
                {% endfor %}
            {% endif %}
        </table>  
        </div>
        {% if form_type == 'edit' %}
            {% embed "repair/_edit_form.html.twig" %}{% endembed %}
        {% else %}
            {% embed "repair/_form_repair_add.html.twig" %}{% endembed %}
        {% endif %}
    </div>
</div>
{% endblock %}
