{% extends 'base.html.twig' %}

{% block title %}Serwisownik - Logowanie {% endblock %}

{% block body %}
<div class="flex justify-center">
    {% for flash_error in app.flashes('error') %}
        <div class="error alert-error absolute top-3 w-4/5 text-center rounded-md bg-red-200 border border-red-300 text-red-700 p-3 z-30" role="alert">{{ flash_error }}</div>
    {% endfor %}
    
    {% for flash_error in app.flashes('success') %}
         <div class="success alert-success absolute top-3 w-4/5 text-center rounded-md bg-green-200 border border-green-300 text-green-700 p-3" role="alert">{{ flash_error }}</div>
    {% endfor %}
</div>

<div class="w-full h-screen background flex flex-col justify-center place-items-center text-white font-mono">

    <form action="{{ path('app_login') }}" method="POST">
        <div class="flex flex-col gap-8 place-items-center">

            <div class=""><img src="{{ asset('img/logo.png') }}" class="w-24"></div>

            <h1 class="text-4xl font-semibold">Logowanie</h1>

            <div class="relative">
                <input type="text" name="_username" id="_username" class = "custom-widget flex bg-transparent border-2 border-gray-700  rounded-md p-1 pl-3 pr-3" placeholder>
                <label class="custom-label" for="_username">Email</label>
            </div>
            <div class="relative">
                <input type="password" name="_password" id="_password" class="custom-widget flex bg-transparent border-2 border-gray-700 rounded-md p-1 pl-3 pr-3" placeholder>
                <label class="custom-label" for="_password">Hasło</label>
            </div>
        </div>
        <div class="flex flex-col w-full mb-6 mt-2 gap-1">
            <a href="{{ path('app_register') }}" class="w-fit text-sm text-gray-400">Nie mam konta</a>
            <a href="" class="w-fit text-sm text-gray-400">Nie pamiętam hasła</a>
        </div>
        <div class="w-full flex justify-center">
            <button type="submit" class="btn rounded-md form__btn border border-none p-2 pr-5 pl-5">Zaloguj</button>
        </div>
            <input type="hidden" name="_target_path" value="/">

    </form>
</div>
{% endblock %}
